From d2673137ad05be08d13a41a94ae401fffd420aa9 Mon Sep 17 00:00:00 2001
From: Uri Mashiach <uri.mashiach@compulab.co.il>
Date: Sun, 2 Aug 2020 14:10:10 +0300
Subject: [PATCH 087/113] iot-gate-imx8: dts: set MMC1 voltage to 1.8V

Signed-off-by: Uri Mashiach <uri.mashiach@compulab.co.il>
---
 arch/arm/dts/iot-gate-imx8.dts | 23 +++++++++++++++++++++++
 1 file changed, 23 insertions(+)

diff --git a/arch/arm/dts/iot-gate-imx8.dts b/arch/arm/dts/iot-gate-imx8.dts
index 6b6b2d69c7..e394eb6043 100644
--- a/arch/arm/dts/iot-gate-imx8.dts
+++ b/arch/arm/dts/iot-gate-imx8.dts
@@ -16,6 +16,8 @@
 
 #include "cpl-imx8m-mini.dtsi"
 
+/delete-node/ &pinctrl_usdhc2_gpio;
+
 / {
 	model = "CompuLab IOT-GATE-iMX8";
 	compatible = "sb-iotgimx8", "cpl,ucm-imx8m-mini", "fsl,imx8mm-evk", "fsl,imx8mm";
@@ -29,6 +31,21 @@
 		regulator-boot-on;
 		enable-active-high;
 	};
+
+	reg_usdhc2_vqmmc: regulator-usdhc2_1v8 {
+		compatible = "regulator-fixed";
+		regulator-name = "usdhc2_1v8";
+		regulator-min-microvolt = <1800000>;
+		regulator-max-microvolt = <1800000>;
+		regulator-always-on;
+	};
+};
+
+&usdhc2 {
+	pinctrl-names = "default";
+	mmc-ddr-1_8v;
+	non-removable;
+	vqmmc-supply = <&reg_usdhc2_vqmmc>;
 };
 
 &usbotg1 {
@@ -40,6 +57,12 @@
 
 &iomuxc {
 	sb-iotgimx8 {
+		pinctrl_usdhc2_gpio: usdhc2grpgpio {
+			fsl,pins = <
+				MX8MM_IOMUXC_SD2_RESET_B_GPIO2_IO19	0x41
+			>;
+		};
+
 		pinctl_usb_gpio: usb_gpio_grp {
 			fsl,pins = <
 				MX8MM_IOMUXC_SAI3_RXFS_GPIO4_IO28		0x00
-- 
